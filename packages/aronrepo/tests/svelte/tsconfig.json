{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "ignoreDeprecations": "5.0",
        "outDir": "src",
        "declaration": true,
        "paths": {
            "*.ts": [
                "*.svelte"
            ]
        },
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "__sapper__/*",
        "public/*"
    ],
}