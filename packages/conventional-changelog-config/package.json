{
    "name": "conventional-changelog-aron",
    "scripts": {
        "build:cjs": "esbuild src/index.ts --bundle --outfile=dist/index.cjs --format=cjs --platform=node",
        "build:esm": "esbuild src/index.ts --bundle --outfile=dist/index.mjs --format=esm --platform=node",
        "build": "concurrently 'npm:build:* -- --minify --sourcemap' 'tsc --emitDeclarationOnly'",
        "dev": "concurrently 'npm:build:* -- --watch'",
        "test": "jest",
        "lint": "eslint ./src"
    },
    "license": "MIT",
    "description": "Aron's conventional changelog preset",
    "author": {
        "name": "Aron",
        "email": "aron@master.co",
        "url": "http://aron.tw"
    },
    "homepage": "https://aron.tw",
    "bugs": {
        "url": "https://github.com/1aron/repo/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/1aron/repo.git",
        "directory": "packages/conventional-changelog-config"
    },
    "keywords": [
        "conventional-changelog",
        "commits",
        "changelog",
        "aron",
        "preset"
    ],
    "main": "./dist/index.cjs",
    "browser": "./dist/index.browser.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.cjs",
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "dependencies": {
        "aron-conventional-commits": "*",
        "compare-func": "^2.0.0"
    },
    "devDependencies": {
        "conventional-changelog-core": "^4.2.4"
    }
}
