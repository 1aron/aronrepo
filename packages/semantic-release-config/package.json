{
    "name": "semantic-release-config-aron",
    "scripts": {
        "build:cjs": "esbuild src/index.ts --bundle --outfile=dist/index.cjs --format=cjs --platform=node",
        "build:esm": "esbuild src/index.ts --bundle --outfile=dist/index.mjs --format=esm --platform=node",
        "build": "concurrently 'npm:build:* -- --minify --sourcemap' 'tsc --emitDeclarationOnly'",
        "dev": "concurrently 'npm:build:* -- --watch'",
        "test": "jest",
        "lint": "eslint ./src"
    },
    "license": "MIT",
    "description": "Aron's semantic release config",
    "author": {
        "name": "Aron",
        "email": "aron@master.co",
        "url": "http://aron.tw"
    },
    "homepage": "https://aron.tw",
    "bugs": {
        "url": "https://github.com/1aron/repo/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/1aron/repo.git",
        "directory": "packages/semantic-release-config"
    },
    "keywords": [
        "config",
        "extends",
        "commits",
        "release",
        "semantic-release",
        "aron",
        "preset"
    ],
    "main": "./dist/index.cjs",
    "browser": "./dist/index.browser.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "require": "./dist/index.cjs",
            "import": "./dist/index.mjs",
            "types": "./dist/index.d.ts"
        },
        "./config": {
            "require": "./dist/config.cjs",
            "import": "./dist/config.mjs",
            "types": "./dist/config.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "peerDependencies": {
        "conventional-changelog-aron": "*"
    },
    "dependencies": {
        "@semantic-release/exec": "*",
        "semantic-release": "*",
        "aron-conventional-commits": "*"
    }
}