{
    "scripts": {
        "install": "npm ls --link=true",
        "build": "turbo run build",
        "build:clean": "rm -rf ./packages/**/*dist && turbo run build --force --no-cache",
        "check": "turbo run test lint --parallel",
        "test": "turbo run test --parallel",
        "lint": "turbo run lint --parallel",
        "type-check": "turbo run type-check",
        "dev": "turbo run dev",
        "version": "node ./packages/repo/dist/bin/index version",
        "analyze:commit": "semantic-release --debug",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/1aron/repo.git"
    },
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/node": "^18.11.9",
        "concurrently": "^7.5.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "jest-environment-jsdom": "^29.3.1",
        "jest-puppeteer": "^6.1.1",
        "parent-module": "^3.0.0",
        "puppeteer": "^19.2.2",
        "tmp": "^0.2.1",
        "husky": "^8.0.0"
    },
    "engines": {
        "node": "^18"
    }
}
